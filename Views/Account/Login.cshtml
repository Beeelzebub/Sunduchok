@model Сундучок.ViewModels.AccountViewModel

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Войдите в ваш аккаунт</h2>
                    <form asp-controller="Account" asp-action="Login">
                        <input asp-for="LoginUserName" placeholder="Логин" />
                        <span asp-validation-for="LoginUserName" class="text-danger"></span>
                        <input asp-for="LoginPassword" placeholder="Пароль" />
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                        <span>
                            <input name="RememberMe" type="checkbox" class="checkbox">
                            Запомнить меня
                        </span>
                        <button type="submit" class="btn btn-default">Войти</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">Или</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Создайте новый аккаунт</h2>
                    <form asp-controller="Account" asp-action="Register">
                        <input asp-for="FirstName" placeholder="Имя" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <input asp-for="SecondName" placeholder="Фамилия" />
                        <span asp-validation-for="SecondName" class="text-danger"></span>
                        <input asp-for="RegisterUserName" placeholder="Логин" />
                        <span asp-validation-for="RegisterUserName" class="text-danger"></span>
                        <input asp-for="RegisterPassword" placeholder="Пароль" />
                        <span asp-validation-for="RegisterPassword" class="text-danger"></span>

                        <button type="submit" class="btn btn-default">Создать</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->