@model Сундучок.ViewModels.DelivaryViewModel

<h2 class="title text-center">Доставка</h2>

<div class="content-center">

    <form asp-action="Delivery">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Контактный телефон" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="City" class="form-control" placeholder="Город" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Street" class="form-control" placeholder="Название улицы" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Hous" class="form-control" placeholder="Номер дома" />
            <span asp-validation-for="Hous" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Porch" class="form-control" placeholder="Подъезд (необязательно)" />
            <span asp-validation-for="Porch" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Apartment" class="form-control" placeholder="Квартира (необязательно)" />
            <span asp-validation-for="Apartment" class="text-danger"></span>
        </div>

        <div class="content-center">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Продолжить</button>
            </div>
        </div>
    </form>
</div>
