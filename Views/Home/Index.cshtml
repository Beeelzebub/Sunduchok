                            <div class="col-sm-6">
                                <img src="/images/note9_pro_2-1000x1000.jpg" class="girl img-responsive" alt="" />
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>Всего за 150!</span></h1>
                                <h2>Adidas Superstar</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                <button type="button" onclick="GetDetails(2)" class="btn btn-default get">Подробнее</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="/images/kisspng-adidas-stan-smith-adidas-superstar-sneakers-shoe-asics-logo-white-5b557f05a73706.8726018415323297336849.jpg" class="girl img-responsive" alt="" />
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>Всего за 39!</span></h1>
                                <h2>Программирование на C# для начинающих А. Н. Васильев</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                <button type="button" onclick="GetDetails(3)" class="btn btn-default get">Подробнее</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="/images/9785040925193 - .jpg" class="girl img-responsive" alt="" />
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Категории</h2>
                    <div class="panel-group category-products" id="accordian">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#" onclick="filter('Техника')">Техника</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#" onclick="filter('Одежда')">Одежда</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#" onclick="filter('Обувь')">Обувь</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#" onclick="filter('Литература')">Литература</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#" onclick="filter('Канцелярия')">Канцелярия</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#" onclick="filter('Прочее')">Прочее</a></h4>
                            </div>
                        </div>
                    </div><!--/category-products-->

                </div>
            </div>

            <div id="content" class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Ассортимент</h2>
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Picture.Image))" alt="" />
                                        <h2>@item.Price бр</h2>
                                        <p>@item.Name</p>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>@item.Price бр</h2>
                                            <p><a onclick="GetDetails(@item.Id)">@item.Name</a></p>
                                            <a onclick="AddToCart(@item.Id)" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>В корзину</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div><!--features_items-->

                <paging total-records="Model.TotalPages"
                        page-no="Model.CurrentPage"
                        page-size="1"
                        show-page-size-nav="false"
                        show-total-pages="false"
                        show-total-records="false">
                </paging>


            </div>
        </div>
    </div>
</section>